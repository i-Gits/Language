package IterativeConstructsXloops;

/**
 *
 * @author arc
 */
public class whileloop {
    public static void whileloopmethod(){
        //aka entry control loop, continues on and on and on until condition returns false it jumps to the next statement
        
        int i = 1;
        while (i <= 3){
            System.out.println("Iteration Number: "+i);
        }
        
    }
    
}
